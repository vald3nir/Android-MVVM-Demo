<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LittleTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BoldTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>